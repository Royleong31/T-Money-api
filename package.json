{
  "name": "t-money-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm:main": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js -d db-config.ts",
    "typeorm:main:generate": "sh -c 'yarn typeorm:main migration:generate migrations/${0}'",
    "typeorm:generate": "wrap () { yarn typeorm:main:generate $* | cat; }; wrap",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "run:migration": "yarn typeorm:main migration:run",
    "start:prod": "yarn build && yarn typeorm:main migration:run && yarn start"
  },
  "dependencies": {
    "@bull-board/express": "^4.9.0",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/bull": "^0.6.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^10.1.7",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/typeorm": "9.0.1",
    "@sendgrid/mail": "^7.7.0",
    "apollo-server-express": "^3.11.1",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.1.2",
    "bull": "^4.10.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.4",
    "express-basic-auth": "^1.2.1",
    "graphql": "^16.6.0",
    "graphql-fields-list": "^2.2.4",
    "ioredis": "^5.2.4",
    "otplib": "^12.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "0.3.12",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
